/* pages/user/user.wxss */

.user-card {
  margin: 5rpx 27rpx 0;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}

.user-info {
  /*box-shadow:0 0 5px rgba(0,0,0,.1);*/
  display: flex;
  align-items: center;
  height: 200rpx;
}


.user-card-info {
     /*box-shadow:0 0 5px rgba(0,0,0,.1);*/
  display: flex;
  align-items: center;
  height: 10rpx;
}

.user-head {
  flex-shrink: 0;
  margin-left: 53rpx;
  height: 100rpx;
  width: 100rpx;
  /*background: #F5E069;*/
  background: #FFFFFF;
  border-radius: 50%;
  border: 0 solid #ffffff;
  box-shadow: 0rpx 0rpx 10rpx #FFFFFF;
}

.user-name {
  flex: 1;
  margin: 0 31rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #FFFFFF;
}

.user-split {
  height: 2rpx;
  background: #F9F9F9;
}

.user-split-big {
  height: 10rpx;
  background: #F9F9F9;
}

.user-options .option {
  display: flex;
  align-items: center;
  margin-left: 46rpx;
  margin-right: 27rpx;
  height: 128rpx;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}

.user-options .option:last-child {
  border-bottom: none;
}

.user-options .option-title {
  flex: 1;
  font-size: 30rpx;
  color: rgba(29, 29, 38, 0.8);
}

.user-options .option-arrow {
  width: 11rpx;
  height: 18rpx;
}

.icon-wrap {
  width: 25%;
  /* height: 100px; */
  float: left;
  text-align: center;
}

.example-icon {
  font-size: 24px;
  padding: 10px;
  color: rgba(69, 90, 100, .8);
}

.icon-classname {
  color: #999;
  font-size: 10px;
}

.right-icon {
  position:absolute;
  top:10px;
  right:10px;
  /*font: ;*/

  font-size:15px;
  text-align:center;
  alignment: center;
  /*line-height:1;*/
  /*margin: 0;*/
  background: #FF3131;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
  width: 200rpx;
  /*height: 50rpx;*/
}

