.pop-container {
  width:690rpx;
  height: 584rpx;
  overflow:hidden;
  border-radius:8rpx;
  background-color:#fff;
  position: relative;
}

.pop-container .title{
  font-size: 36rpx;
  color: #000;
  line-height: 36rpx;
  width: 100%;
  text-align:center;
  margin-top: 44rpx;
}

.pop-container .pop-close{
  width: 66rpx;
  height: 66rpx;
  flex: 1;
  background:url(data:image/png;base64,) no-repeat center center;
  background-size: 66rpx auto;
  position: absolute;
  top:0rpx;
  right: 0rpx;
}

.pop-container .phone-box .pop-phone{
  height: 100%;
  width: 300rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e5e5e5;
}

.pop-container .input{
  height: 100%;
  font-size: 30rpx;
  padding-left: 30rpx;
  color: #333333;
}

.pop-container .input-placeholder{
  font-size: 30rpx;
  color: #bcbcbc;
}

.pop-container .phone-box{
  height: 98rpx;
  width: 594rpx;
  display: flex;
  flex-direction: row;
  margin-top: 66rpx;
  margin-left: 49rpx;
}

.pop-container .phone-box .wx-phone{
  width: 258rpx;
  height: 98rpx;
  border-radius: 8rpx;
  margin-left: 38rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 98rpx;
  border: 1rpx solid #fe403b;
  color: #fe403b;
}

.pop-container .phone-box .wx-phone button{
  width: 100%; 
  height: 100%; 
  opacity: 1; 
  top: 0; 
  left: 0;
  border: none;
  color: #fe403b;
}

.pop-container .pop-verify{
  height: 98rpx;
  width: 594rpx;
  display: flex;
  flex-direction: row;
  margin-top: 38rpx;
  margin-left: 49rpx;
}

.pop-container .pop-verify .code-btn{
  width: 258rpx;
  height: 98rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e5e5e5;
  margin-left: 38rpx;
  text-align: center;
  color: #bcbcbc;
  font-size: 30rpx;
  line-height: 98rpx;
}

.pop-container .pop-verify .code-btn.active{
  border: 1rpx solid #fe403b;
  color: #fe403b;
}

.pop-container .pop-ok{
  width: 600rpx;
  height: 90rpx;
  background-color: #fe403b;
  border-radius: 8rpx;
  color: #fff;
  font-size: 34rpx;
  line-height: 90rpx;
  text-align: center;
  margin-left: 49rpx;
  margin-top: 38rpx;
}

.pop-container .pop-verify .pop-code{
  width: 300rpx;
  height: 100%;
  border-radius: 8rpx;
  border: 1rpx solid #e5e5e5;
}

