<!--pages/home/home.wxml-->
<!--image src='/images/bg.png' class='bg'></image-->
<view class="container">
    <!--from bindsubmit="selectcat"-->
        <view class="form-box">
            <view class="row-wrap">
                <view class="label">请选择车型</view>
                <view class="label-right"><!-- bindtap="selectcat"-->
                    <picker bindchange="bindPickerCarChange" range="{{cars}}">
                    <view class="picker {{selcar=='请选择'?'hui':''}}">
                        {{selcar}}
                    </view>
                    </picker>
                </view>
            </view>
        </view>
    <!--/from-->
    <view wx:for="{{routers}}" wx:key="productclass">
        <view class='list-title'>
        <view class='list-title-text'>{{item.productclass}}</view>
        </view>
        <view class="weui-grids">
            <navigator class="weui-grid" wx:for="{{item.productlist}}" wx:key="productid"  url="/pages/detail/detail?id={{item.productId}}">
                <view class='weui-grid__bg'>
                    <view class="weui-grid__icon">
                        <image src=" {{item.icon}}" mode="aspectFill" />
                    </view>
                    <text class="weui-grid__label">{{item.name}}</text>
                </view>
            </navigator>
        </view>
    </view>
</view>