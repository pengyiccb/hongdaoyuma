view {
    font-family: "PingFang SC", "Helvetica Neue", Helvetica, "Nimbus Sans L", Arial, "Liberation Sans", "Hiragino Sans GB", "Source Han Sans CN Normal", "Microsoft YaHei", "Wenquanyi Micro Hei", "WenQuanYi Zen Hei", "ST Heiti", SimHei, "WenQuanYi Zen Hei Sharp", sans-serif;
}

.container{
    width: 750rpx;
    background-color: #F2f2f2;
}
.status-box{
    width:750rpx;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    position: fixed;
    z-index: 100;
}
.status-box .status-label{
    width: 150rpx;
    height: 100%;
    text-align: center;
    font-size:28rpx;
    color:#343434;
    box-sizing: border-box;
    position: relative;
}
.status-box .status-label.active{
    color:#ff3938;
    border-bottom: 2rpx solid #ff3938;
}
.status-box .status-label .red-dot{
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    left: 116rpx;
    top:23rpx;
    background-color: #f43530;
    border-radius: 50%;
}
.no-order{
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 88rpx;
    left: 0;
    right: 0;
    text-align: center;
    padding-top: 203rpx;
    background-color: #F2f2f2;
}
.no-order-img{
    width: 81rpx;
    height: 96rpx;
    margin-bottom: 31rpx;
}
.no-order .text{
    font-size:28rpx;
    color:#999999;
    text-align: center
}
.order-list{
    width: 100%;
    position: absolute;
    top: 88rpx;
}
.order-list .a-order{
    width: 100%;
    background-color: #F2f2f2;
    margin-bottom: 20rpx;
}
.order-list .a-order .order-date{
    padding: 0 30rpx;
    height: 88rpx;
    display: flex;
    justify-content: space-between;
    font-size:26rpx;
    color:#000000;
    align-items: center;
}
.order-list .a-order .order-date .red{
    font-size:26rpx;
    color:#e64340;
}
.a-order  .goods-info,
.goods-img-container{
    width: 720rpx;
    margin-left: 30rpx;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    padding: 30rpx 0;
    display: flex;
    align-items: center;
}
.goods-info .img-box{
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    margin-right: 30rpx;
    background-color: #f7f7f7;
}
.goods-info .img-box .goods-img,
.goods-img-container .img-box .goods-img{
    width: 120rpx;
    height: 120rpx;
}
.goods-info  .goods-des{
    width: 540rpx;
    height: 78rpx;
    line-height: 39rpx;
    font-size:26rpx;
    color:#000000;
    overflow: hidden;
}
.goods-img-container{
    height: 180rpx;
    box-sizing: border-box;
    white-space: nowrap;
}
.goods-img-container .img-box{
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    margin-right: 20rpx;
    background-color: #f7f7f7;
    display: inline-block;
}
.order-list .a-order .price-box{
    height: 64rpx;
    line-height: 64rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: flex-end;    
    background-color: #fff;
    padding-right: 32rpx;
    margin-bottom: 1rpx;
}
.order-list .a-order .price-box .total-num{
    font-size:26rpx;
    color: #343434;
}
.order-list .a-order .price-box .total-price{
    font-size:32rpx;
    color: #fe403b;
}

.order-list .a-order .btn-box{
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: flex-end;    
    background-color: #fff;
    padding-right: 24rpx;
}

.a-order .btn-box .btn{
    width: 156rpx;
    height: 50rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 50rpx;
    border-radius: 6rpx;
    margin-left: 20rpx;
    font-size: 24rpx;
}
.a-order .btn-box .cancel-btn{
    border: 1rpx solid #ccc;
    right: 216rpx;
    top:20rpx;
}
.a-order .btn-box .topay-btn{
    border:1px solid #e64340;
    color: #e64340;
}

.a-order .btn-box .order-status{
    color: #ff3938;
    font-size: 26rpx;
    box-sizing: border-box;
    text-align: center;
}

.a-order  .a-goods{
    width: 100%;
    height: 242rpx;
    margin-bottom: 1rpx;
    display: flex;
    /* padding-top: 24rpx; */
    padding-left: 24rpx;
    padding-right: 24rpx;
    background-color: #fff;
}
.a-order  .a-goods .img-box{
    width: 184rpx;
    height:184rpx;
    /* overflow: hidden; */
    margin-right: 24rpx;
    margin-top: 24rpx;
    /* background-color: #d8d8d8; */
}

.a-order .img-box .img{
    width: 184rpx;
    height:184rpx;
}
.a-order  .a-goods .text-box{
    width: 100%;
    box-sizing: border-box;
    margin-right: 40rpx;
    margin-top: 18rpx;
    position: relative;
}
.a-goods .text-box .goods-arrow{
    position: absolute;
    bottom: 15rpx;
    width: 100%;
 }
.a-goods .text-box .goods-name{
    font-size: 24rpx;
    color:#333333;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin-bottom: 18rpx;
 }
.a-goods .text-box .goods-arrow .goods-price{
    font-size: 26rpx;
    color:#fe403b;
    float: left;
}
.a-goods .text-box .goods-label{
    font-size: 22rpx;
    color:#959595;
    background-color: #f5f5f5;
    height: 64rpx;
    line-height: 30rpx;
    margin-top: 9rpx;
    margin-right: 24rpx;
    margin-bottom: 13rpx;
    padding-left: 9rpx;
    /* padding-right: 36rpx; */
    padding-top: 4rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.a-goods .text-box .goods-arrow .goods-num{
    font-size: 26rpx;
    color: #999;
    float: right;
}