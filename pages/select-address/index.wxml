<import src="../../pages/template/foot.wxml" />
<view class="container">
    <view class="address-list">
        <view class="a-address"  wx:for="{{addressList}}" wx:key="{{index}}">
             <view class="left-text {{item.isDefault == 1? 'active':''}}" bindtap="selectTap" data-index="{{index}}">
                 <view class="name-tel">
                    {{item.userName}}  {{item.mobilePhone}}
                 </view>
                 <view class="address-box">
                    {{item.areaAddress1}} {{item.areaAddress2}} {{item.areaAddress3}} {{item.addressDetail}}
                 </view>     
             </view>   
             <view class="right-edit" bindtap="editAddess" data-id="{{item.id}}"></view> 
        </view>
    </view>
    <template is="foot" />
    <view class="bottom-box">
        <view class="add-btn" bindtap="addAddess">新增收货地址</view>
    </view>

</view>