@import "/wxParse/wxParse.wxss";

view {
  font-family: "PingFang SC", "Helvetica Neue", Helvetica, "Nimbus Sans L", Arial, "Liberation Sans", "Hiragino Sans GB", "Source Han Sans CN Normal", "Microsoft YaHei", "Wenquanyi Micro Hei", "WenQuanYi Zen Hei", "ST Heiti", SimHei, "WenQuanYi Zen Hei Sharp", sans-serif;
}

.container {
  background-color: #F2f2f3;
  /* min-height: 100%; */
  padding-bottom: 100rpx;
}
.swiper-container{
  width: 100%;
  height: 574rpx;
  position: relative;  
}
.swiper_box {
  width: 100%;
  height:574rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:574rpx;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #000;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .3;
}  
.swiper-container .dots .dot.active{  
  opacity: .6;
}
.goods-info{
  background-color: #fff;
  margin-bottom: 20rpx;
  width: 100%;
  height: 230rpx;
}
.btn_grounp{
  position:absolute;
  left:0;
  right:0;
  bottom:0;
}
.goods-info-fx {
  position: absolute;
  width: 68rpx;
  height: 82rpx;
  right: 36rpx;
  top: 682rpx;
}

.goods-info-fx button {
  position: absolute;
  width: 68rpx;
  height: 82rpx;
  top: 0;
  left: 0;
  z-index: 2;
  opacity: 0;
}

.goods-info-fx image {
  width: 68rpx;
  height: 82rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.goods-info-fx text {
  position: absolute;
  z-index: 1;
  padding-top: 50rpx;
  padding-left: 10rpx;
  font-size: 10px;
  text-align: center;
  color: #B6B6B5;
}
.goods-info .goods-title{
  box-sizing: border-box;
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  padding-left: 24rpx;
  padding-right: 150rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-info .goods-price{
   box-sizing:border-box;
   margin-bottom: 10rpx;
   padding-left: 24rpx;
   padding-top: 20rpx;
   color:#fe4038;
   font-size: 55rpx;
   font-style: normal;
}

.goods-attr{
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  background-color: #ffffff;  
  line-height: 80rpx;
  /* border-bottom: 1rpx solid #cccccc; */
}
.goods-attr .goodTitle{
  position: absolute;  
  font-size: 26rpx;
  color: #999999;
}
.goods-attr .goodTip{
  padding-right:100rpx;
  font-size: 26rpx;
  color: #343434;
  padding-left: 130rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.good-tab{
  width: 100%;
  height: 100rpx;
  line-height: 90rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  font-size: 26rpx;
}

.good-tab .label-title{
  text-align: center;
  color:#343434;
  width: 50%;
  border-bottom: 1rpx solid #cccccc;
}

.good-tab .label-title.active{
  text-align: center;
  color:#FF3938;
  width: 50%;
  border-bottom: 2rpx solid #FF3938;
}

.goods-des-info{
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}

.goods-text{
  padding: 0 10rpx;
  font-size:28rpx;
  color:#666666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
}
.des-imgs{
  width:100%;
}
.des-imgs image{
  width: 100%;
}
.footer-box{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow:0 0 8rpx 0 ;
}

.footer-box .join-shop-cart{
  text-align: center;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
  background-color: #3e3e3e;
  color:#ffffff;
  font-size: 28rpx;
  font-weight: bold;
}
.footer-box .now-buy{
  text-align: center;
  height: 100%;
  width: 50%;
  line-height: 100rpx;
  background-color: #ff3938;
  color:#ffffff;
  font-size: 28rpx;
  font-weight: bold;
}
.show-popup{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 4;
}
.popup-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents{
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  height: 1068rpx;
  background-color: #fff;
  z-index: 6;
  border-top-left-radius:20rpx;
  border-top-right-radius:20rpx;
}
.pop-goods-info{
  display: flex;
  flex-direction: row;
  height: 280rpx;
  border-bottom: 1rpx solid #eee;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.pop-img-box{
  width: 220rpx;
  height: 220rpx;
  overflow: hidden;
  margin-right: 26rpx;
}
.pop-img-box .goods-thumbnail{
  width: 220rpx;
  height: 220rpx;
}
.pop-goods-title{
  width: 484rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size:26rpx;
  color:#000000;
}
.pop-goods-price{
  font-size:30rpx;
  color:#fe403b;
  margin-bottom: 5rpx;
}
.pop-goods-stock{
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 14rpx;
}
.pop-goods-select{
  font-size: 24rpx;
  color: #343434;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.pop-goods-close{
  width: 36rpx;
  height: 36rpx;
  flex: 1;
  background:url("https://cdn.it120.cc/images/weappshop/popup-close.png") no-repeat center center;
  background-size: 36rpx auto;
  position: absolute;
  top:20rpx;
  right: 20rpx;
}
.size-label-box{
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.size-label-box  .label{
  font-size:28rpx;
  color:#343434;
  margin-top:35rpx;
}
.size-label-box .label-item-box{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}
.size-label-box .label-item{
  font-size:26rpx;
  color:#000;
  background-color: #f5f5f5;
  padding: 14rpx 20rpx;
  border-radius: 14rpx;
  margin: 28rpx 20rpx;
}
.size-label-box .label-item.active{
  background-color: #fff4f4;
  color: #e64340;
  border: 1px solid #e64340;
}
.buy-num-box{
  height: 124rpx;
  display: flex;
  justify-content: space-between;
  line-height: 124rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee
}
.num-label{
  font-size:28rpx;
  color:#000000;
  /* font-weight: MEDIUM; */
}
.buy-num-box .num-box{
     display: flex;
}
.buy-num-box .num-box .num-input{
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #f5f5f5;
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 2rpx;
  margin-right: 2rpx;
}

.buy-num-box .num-box .num-jian,
.buy-num-box .num-box .num-jia{
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #f5f5f5;
  color: #999999;
  font-size: 45rpx;
  font-weight: bold;
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
}

.buy-num-box .num-box .num-input{
  font-size: 30rpx;
}
.buy-num-box .num-box .num-input input{
  width: 100%;
  height: 100%;
}

.popup-ok-btn{
  text-align: center;
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  background-color: #ff3938;
  color:#ffffff;
  font-size: 28rpx;
  font-weight: bold;
  bottom: 0rpx;
  position: absolute;
}

.popup-join-btn{
  text-align: center;
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #3e3e3e;
  color:#ffffff;
  font-size: 28rpx;
  font-weight: bold;
  float: left;
  bottom: 0rpx;
}

.popup-buy-btn{  
  text-align: center;
  height: 100rpx;
  width: 50%;
  line-height: 100rpx;
  background-color: #ff3938;
  color:#ffffff;
  font-size: 28rpx;
  font-weight: bold;
  bottom: 0rpx;
}
.buy-num-box .num-box .hui{
  background-color: #fbfbfb;
  color: #cbcbcb;
}

.popup-good-attr{
  vertical-align: bottom; 
  margin-top: 95rpx
}

.tip-style{
  right: 24rpx;
  width: 14rpx;
  height: 23rpx;
  margin-top:-50rpx;
  position:absolute;
}