<view class="shopRecord" class="{{bIsHidePopup ? '' : 'noScroll'}}"> 
    <view class="shopRecordItem" wx:for="{{shopRecordList}}"> 
        <view class="textPublic">服务时间：{{item.time}}</view>
        <view class="dashed"></view> 
        <view class="textPublic">所属套餐：《{{item.setMealType}}》</view>
        <view class="dashed"></view> 
        <view class="textPublic">服务项目：{{item.projectType}}</view>
        <view class="dashed"></view> 
        <view class="textPublic">服务车辆：{{item.carNumber}}</view>
        <view class="dashed"></view> 
        <view class="statusItem"> 
            <view class="textPublic">服务状态：{{statusName[item.status]}}</view>
            <view class="buttonBase.confirm" hidden="{{item.status==1?false:true}}" bindtap='onClickButtonConfirm'>确认完成</view>
            <view class="buttonBase" hidden="{{item.status==0?false:true}}" bindtap='onClickButtonCancel'>取消订单</view>
            <view class="buttonBase.contact" hidden="{{item.status==0?false:true}}" bindtap='onClickButtonContact'>联系商家</view>
        </view>
    </view>
</view>

<view class="popupMask" bindtap="closePopupTap" hidden="{{bIsHidePopup}}" >
    <view class="popupBg"> 
        <view class="pop-goods-close" bindtap="closePopupTap"></view> 
        <view class="textTitle">服务说明</view>
        <view class="textTitlePS">“{{shopRecordList[0].setMealType}}”服务项目说明：</view>
        <scroll-view class="scrollViewFrame" scroll-y="true" style="width: 100%">
            <view class="textInfo" wx:for="{{shopRecordList}}"> 
                <view class="textSubTitle">{{(index+1)}}、{{item.setMealType}}：</view>
                <view class="textSubInfo">{{item.carNumber}}{{item.carNumber}}{{item.carNumber}}{{item.carNumber}}{{item.carNumber}}{{item.carNumber}}{{item.carNumber}}{{item.carNumber}}{{item.carNumber}}{{item.carNumber}}</view>
                <view class="separateDashed" hidden="{{(index+1)==shopRecordList.length?true:false}}"></view> 
            </view>
        </scroll-view >
    </view>
</view>